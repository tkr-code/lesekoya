<div class="container px-1 px-md-4 mx-auto">
    
    <div class="card">
        <div class="row d-flex justify-content-between px-3 top">
            <div class="d-flex">
                <h5>{{'ORDER'|trans}} <span class="text-primary font-weight-bold">#{{ order.number }}</span></h5>
            </div>
            <div class="d-flex flex-column text-sm-right">
                {# <p class="mb-0">{{'Expected Arrival'|trans}} <span>{{ order.createdAt|date_format_fr }}</span></p> #}
                {# <p>USPS <span class="font-weight-bold">234094567242423422898</span></p> #}
            </div>
        </div>
        <!-- Add class 'active' to progress -->
        <div class="row d-flex justify-content-center">
            <div class="col-12">
            <ul id="progressbar" class="text-center">
            {% if order.state  == 'waiting' %}
                <li class="active step0"></li>
                <li class="step0"></li>
                <li class="step0"></li>
                <li class="step0"></li>
            {% elseif order.state  == 'in progress' %}
                <li class="active step0"></li>
                <li class="active step0"></li>
                <li class="step0"></li>
                <li class="step0"></li>
            {% elseif order.state  == 'shipping' %}
                <li class="active step0"></li>
                <li class="active step0"></li>
                <li class="active step0"></li>
                <li class="step0"></li>
            {% elseif order.state  == 'completed' %}
                <li class="active step0"></li>
                <li class="active step0"></li>
                <li class="active step0"></li>
                <li class="active step0"></li>
            {% endif %}
            </ul>
            </div>
        </div>
       
        {% if order.state != 'canceled' %}
        <div class="row justify-content-between top">
            <div class="row d-flex icon-content">
                <img class="icon-track" src="https://i.imgur.com/9nnc9Et.png">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">{{'Order'|trans}}<br>{{'Waiting'|trans}}</p>
                </div>
            </div>
            <div class="row d-flex icon-content">
                <img class="icon-track" src="https://i.imgur.com/u1AzR7w.png">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">{{'Order'|trans}}<br>{{'In progress'|trans}}</p>
                </div>
            </div>
            <div class="row d-flex icon-content">
                <img class="icon-track" src="https://i.imgur.com/TkPm63y.png">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">{{'Order'|trans}}<br>En Route</p>
                </div>
            </div>
            <div class="row d-flex icon-content">
                <img class="icon-track" src="https://i.imgur.com/HdsziHP.png">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">{{'Order'|trans}}<br>{{'Arrived'|trans}}</p>
                </div>
            </div>
        </div>
        {% else %}
        <div class="row justify-content-between top">
            <div class="row d-flex icon-content">
                <h3 class="text-danger font-weight-bold">La commande a été annulé</h3>
                </div>
        </div>
        {% endif %}
    </div>
    {% if order.state != 'completed' %}

        {% if order.state != 'canceled' %}
        <button class="btn-send-order-number btn btn-primary">Actualiser</button>
        {% endif %}
    {% endif %}
</div>