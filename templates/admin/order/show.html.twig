{% import "macros/breadcrumb.html.twig" as utils %}
{% import ('macros/ribbon.html.twig') as ribbon %}

{% extends 'admin/base.html.twig' %}

{% block title %} Facture {{ app_name }} - {{ order.user.fullName }} {% endblock %}

{% block breadcrumb %}
    {{ utils.breadcrumb('Invoice',[
        {
            path:path('order_index'),
            name:'Manage Order'
        }
    ])}}
{% endblock %}

{% block body %}                  
<div class="row">
  <div class="col-12">
    {{ ribbon.ribbon(order.state)}}
    <!-- Main content -->
      <div class="invoice p-3 mb-3">
        {% include ('admin/order/_order.html.twig') %}
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-12">
                <a 
                    href="{{ path('order_print',{ id : order.id }) }}" 
                    rel="noopener" 
                    target="_blank"
                    class="btn btn-default"><i class="fas fa-print"></i> Print
                </a>
                {# <button type="button" class="btn btn-success float-right"><i class="far fa-credit-card"></i> Submit
                Payment
                </button> #}
                {# <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                <i class="fas fa-download"></i> Generate PDF
                </button> #}
            </div>
        </div>
      </div>
    <!-- /.invoice -->
  </div><!-- /.col -->
</div><!-- /.row -->
{% endblock %}
