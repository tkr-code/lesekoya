<table id="datatable_{{ id }}" class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>invoice</th>
            <th>Note</th>
            <th>Total</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th>Shipping state</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for order in orders %}
        <tr>
            <td>{{ order.id }}</td>
            <td>{{ order.number }}</td>
            <td>{{ order.note }}</td>
            <td>{{ order.total | number_format(2,'.',' ') }} XOF</td>
            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : 'Not modify' }}</td>
            <td>{{ order.shippingState }}</td>
            <td>
                <a href="{{ path('order_show', {'id': order.id}) }}"><i class="fa fa-eye text-dark"></i></a>
            {% if order.paymentState != 'paid' %}
                <a class="ml-1 mr-1" href="{{ path('order_edit', {'id': order.id}) }}"> <i class="fas fa-pencil-alt text-success"></i></a>
            {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="12">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>invoice</th>
            <th>Note</th>
            <th>Total</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Shipping_state</th>
            <th>actions</th>
        </tr>
    </tfoot>
    </table>