{% import "macros/link.html.twig" as link %}

{{ form_start(form,{
    attr:{
        'novalidate':'novalidate'
    }
}) }}
<div class="row">
    <div class="col-lg-6">
        <div class="row">
            <div class="col-md-6 col-12">
                {{ form_row(form.personne.firstName)}}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.personne.lastName)}}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.email)}}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.roles)}}
            </div>
            <div class="col-md-12 col-12">
                {{ form_row(form.adresse)}}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.password)}}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.phone_number)}}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.isVerified)}}
            </div>
            <div class="col-md-6 col-12">
                {{ form_row(form.sendEmail)}}
            </div>
        </div>
        <div class="btn-group">
            {{ link.back(path('user_index')) }}
            <button class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>