{% extends 'admin/base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Type</th>
                <th>Valeur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.code }}</td>
                <td>{{ coupon.type }}</td>
                <td>{{ coupon.valeur }}</td>
                <td>
                    <a href="{{ path('admin_coupon_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('admin_coupon_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_coupon_new') }}">Create new</a>
{% endblock %}
