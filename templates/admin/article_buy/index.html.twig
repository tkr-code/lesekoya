{% extends 'admin/base.html.twig' %}

{% block title %}ArticleBuy index{% endblock %}

{% block body %}
    <h1>ArticleBuy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article_buy in article_buys %}
            <tr>
                <td>{{ article_buy.id }}</td>
                <td>{{ article_buy.price }}</td>
                <td>{{ article_buy.quantity }}</td>
                <td>
                    <a href="{{ path('admin_article_buy_show', {'id': article_buy.id}) }}">show</a>
                    <a href="{{ path('admin_article_buy_edit', {'id': article_buy.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_article_buy_new') }}">Create new</a>
{% endblock %}
