{% extends 'base.html.twig' %}

{% block title %}ArticleOption index{% endblock %}

{% block body %}
    <h1>ArticleOption index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article_option in article_options %}
            <tr>
                <td>{{ article_option.id }}</td>
                <td>{{ article_option.title }}</td>
                <td>{{ article_option.content }}</td>
                <td>{{ article_option.createdAt ? article_option.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article_option.updatedAt ? article_option.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_option_show', {'id': article_option.id}) }}">show</a>
                    <a href="{{ path('article_option_edit', {'id': article_option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_option_new') }}">Create new</a>
{% endblock %}
