{% extends 'admin/base.html.twig' %}
{% import "macros/link.html.twig" as link %}
{% block title %}Edit Street{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <div class="card-title">
                    Edit Street
                </div>
            </div>
            <div class="card-body">
                {{ include('admin/street/_form.html.twig', {'button_label': 'Update'}) }}

                {{ link.back(path('street_index')) }}
                {% if is_granted('ROLE_ADMIN') %}
                <hr>
                {{ include('admin/street/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}