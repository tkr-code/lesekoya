{% extends 'admin/base.html.twig' %}

{% block title %}Street index{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h1>Street index</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for street in streets %}
                        <tr>
                            <td>{{ street.id }}</td>
                            <td>{{ street.name }}</td>
                            <td>
                                <a href="{{ path('street_show', {'id': street.id}) }}">show</a>
                                <a href="{{ path('street_edit', {'id': street.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('street_new') }}">Create new</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
