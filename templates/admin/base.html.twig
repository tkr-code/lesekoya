    $(document).ready(function () { // Initialize Select2 Elements
      $(".alert").fadeTo(10000, 500).slideUp(500, function () {
        $(".alert").slideUp(500);
      });
      
      // Modal monant de livrauisn
      $(document).on('click', '#btn-modal-shipping', function (e) {
        e.preventDefault()
        $('#modal-default').modal('show')
        $('#modal-default .modal-title').html('Modifier la livraison')
        let href = $(this).data('path')
