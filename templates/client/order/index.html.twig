{% import "macros/table.html.twig" as table %}
{% import "macros/head.html.twig" as head %}
{% import "macros/foot.html.twig" as foot %}
{% import "macros/breadcrumb.html.twig" as utils %}
{% import "macros/alertes.html.twig" as alerte %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}
{% import "macros/search.html.twig" as search %}

{% extends 'lesekoya/base.html.twig' %}

{% block title %}Client | {{app_name}} {% endblock %}

{% block stylesheets %}
  {{ head.dataTable() }}
{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('client_order') }}">Mes commandes</a></li>
    <li class="breadcrumb-item active">Cart</li>
</ol>
<div class="container">
    <div class="row my-5">
            {% include "client/nav.html.twig" %}
        <div class="col-lg-9">
            <div class="card card-primary card-outline card-tabs">
            <div class="card-header p-0 pt-1 border-bottom-0">
                <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="custom-tabs-three-home-tab"
                            data-toggle="pill" href="#custom-tabs-three-home" role="tab"
                            aria-controls="custom-tabs-three-home" aria-selected="true">Tous (<span class="font-weight-bold"> 
                            {{ orders| length }}
                            </span>)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-profile-tab" data-toggle="pill"
                            href="#order-en-attente" role="tab"
                            aria-controls="custom-tabs-three-profile"
                            aria-selected="false">Waiting (<span class="font-weight-bold"> 
                            {{ ordersWaiting| length }}
                            </span>)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-profile-tab" data-toggle="pill"
                            href="#order-in-progress" role="tab"
                            aria-controls="custom-tabs-three-profile"
                            aria-selected="false">In progress (<span class="font-weight-bold"> 
                            {{ ordersInProgress| length }}
                            </span>)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-profile-tab" data-toggle="pill"
                            href="#order-canceled" role="tab"
                            aria-controls="custom-tabs-three-profile"
                            aria-selected="false">Canceled (<span class="font-weight-bold"> 
                            {{ ordersCanceled| length }}
                            </span>)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-profile-tab" data-toggle="pill"
                            href="#order-completed" role="tab"
                            aria-controls="custom-tabs-three-profile"
                            aria-selected="false">Completed (<span class="font-weight-bold"> 
                            {{ ordersCompleted| length }}
                            </span>)</a>
                    </li>
                   
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="custom-tabs-three-tabContent">
                    <div class="tab-pane fade show active" id="custom-tabs-three-home"
                        role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                            {{ include ("client/order/_datatable.html.twig",{id:'1',orders: orders}) }}
                                
                    </div>
                    <div class="tab-pane fade" id="order-in-progress" role="tabpanel"
                        aria-labelledby="custom-tabs-three-profile-tab">
                            {{ include ("client/order/_datatable.html.twig",{id:'2',orders: ordersInProgress}) }}
                    </div>
                    <div class="tab-pane fade" id="order-en-attente" role="tabpanel"
                        aria-labelledby="custom-tabs-three-profile-tab">
                            {{ include ("client/order/_datatable.html.twig",{id:'3',orders: ordersWaiting}) }}
                    </div>
                    <div class="tab-pane fade" id="order-completed" role="tabpanel"
                        aria-labelledby="custom-tabs-three-profile-tab">
                            {{ include ("client/order/_datatable.html.twig",{id:'4',orders: ordersCompleted}) }}
                    </div>
                    <div class="tab-pane fade" id="order-canceled" role="tabpanel"
                        aria-labelledby="custom-tabs-three-profile-tab">
                            {{ include ("client/order/_datatable.html.twig",{id:'5',orders: ordersCanceled}) }}
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
            <div class="card">
                <div class="card-header">
                    <p class="p-0 m-0 h4">{{ 'My orders'|trans }}</p>    
                </div>
                <div class="card-body">

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block foot %}
{{ foot.dataTable()}}
{% endblock %}

{% block javascripts %}
{{ table.jsDataTable('datatable_1') }} 
{{ table.jsDataTable('datatable_2') }} 
{{ table.jsDataTable('datatable_3') }} 
{{ table.jsDataTable('datatable_4') }} 
{{ table.jsDataTable('datatable_5') }} 
    <script>
        $(document).ready(function(){
            $('.my-orders').addClass('active')
        })
    </script>
{% endblock %}