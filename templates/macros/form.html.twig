{% macro delete(path, id, name) %}
<form class="d-inline-block" method="post" action="{{ path }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn"><i class="text-danger fas fa-trash-alt    "></i></button>
</form>    
{% endmacro %}