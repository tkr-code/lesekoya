{% extends base ~'/base.html.twig' %}

{% block title %}{{'Reset your password'|trans}}{% endblock %}

{% block main %}

    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">{{'Home'|trans}}</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ 'Request'|trans }}</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->
    <div class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="container my-5">
                        {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    <h3>{{'Reset your password'|trans}}</h3>

                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                {{'Enter your email address and we we will send you a
                                link to reset your password.'|trans}}
                            </small>
                        </div>
                        <button class="btn btn-primary">{{'Send password reset email'|trans}}</button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>

    </div>
{% endblock %}
