{% extends "base.html.twig" %}
{% import "macros/search.html.twig" as search %}
{% block title %}Malick{% endblock %}

{% block body %}
    {{ search.search(searchForm) }}
<div class="container">
    <div class="row mt-3 ">
        <div class="col-lg-12">
            <div class="card card-default">
                <div class="card-header">
                    <p class="card-text">Title</p>
                </div>
                <div class="card-body">
                    <h1> {% trans %}Home page{% endtrans %} </h1>
                    <div>
                        <ul>
                        {% for page in pages %}
                            <li><a href="{{ path(page.path)}}">{{page.name}}</a></li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card card-success">
                <div class="card-header">
                    <p>Smartphones</p>
                </div>
                <div class="card-body">
                    <div class="row">
                    {# {% for item in items %}
                        <div class="col-md-4 mt-2">
                            {% include "main/article/_article.html.twig" %}  
                        </div>
                    {% endfor %} #}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script>
    $(document).ready(function(){
// $('.single-item').slick();
        $(".single-item").slick({
            // normal options...
            infinite: false,

            // the magic
            responsive: [{

                breakpoint: 1024,
                settings: {
                    slidesToShow: 3,
                    infinite: true
                }

                }, {

                breakpoint: 600,
                settings: {
                    slidesToShow: 2,
                    dots: true
                }

                }, {

                breakpoint: 300,
                settings: "unslick" // destroys slick

                }]
            });

    })
</script>
{% endblock %}